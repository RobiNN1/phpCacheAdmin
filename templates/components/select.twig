<select id="{{ id }}" name="{{ id }}"
        class="select {{ width ? width : 'w-full' }} appearance-none rounded border border-gray-300 bg-white py-1.5 px-3 text-base focus:outline-none focus:ring focus:ring-primary-200 focus:border-primary-300{{ class|space }}" aria-label="">
    {% for value, name in options %}
        <option value="{{ value }}"{{ value == selected ? ' selected' : '' }}>{{ name }}</option>
    {% endfor %}
</select>
