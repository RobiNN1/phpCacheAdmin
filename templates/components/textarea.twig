<div class="mb-4">
    <label for="{{ id }}" class="mb-2 block text-sm font-semibold">{{ label }}</label>
    <textarea id="{{ id }}" name="{{ id }}"
              class="w-full rounded border border-gray-300 bg-white py-1.5 px-3 text-base focus:outline-none focus:ring focus:ring-primary-200 focus:border-primary-300
              dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400 dark:focus:ring-primary-500 dark:focus:border-primary-400"
              rows="10" required>{{ value }}</textarea>
</div>
