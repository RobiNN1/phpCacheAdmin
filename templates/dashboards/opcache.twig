<div class="mb-4 lg:grid lg:grid-cols-2 lg:gap-4">
    <div class="mb-4 md:grid md:grid-cols-2 md:gap-2 lg:mb-0">
        {% if all_files != 0 %}
            <div>{{ include('components/search_input.twig') }}</div>
        {% endif %}
    </div>

    <div class="lg:flex lg:justify-end">
        <div>
            {{ include('components/button.twig', {
                text: (is_ignored ? 'Show' : 'Ignore') ~ ' scripts from this tool',
                link: ignore_url,
                class: 'mr-1',
            }) }}
        </div>
        {{ include('partials/keys_buttons.twig', {all_keys: all_files}) }}
    </div>
</div>

{{ include('partials/keys_table.twig', {
    head_items: [
        {'title': 'Filename', 'sort': 'title'},
        {'title': 'Hits', 'class': 'w-16', 'sort': 'number_hits'},
        {'title': 'Memory', 'class': 'w-24', 'sort': 'bytes_memory'},
        {'title': 'Last used', 'class': 'w-32', 'sort': 'timediff_last_used'},
        {'title': 'Created', 'class': 'w-44 hidden md:table-cell', 'sort': 'time_created'},
    ],
    classes: {
        5: 'hidden md:table-cell',
    },
    keys: cached_scripts,
}) }}
