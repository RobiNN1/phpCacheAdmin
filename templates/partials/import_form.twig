{% macro form() %}
    <form method="post" enctype="multipart/form-data" id="import_form">
        <div class="mb-4">
            <label for="import" class="mb-2 block text-sm font-semibold dark:text-gray-300">JSON file</label>
            <input id="import" name="import" type="file" accept="application/json"
                   class="w-full text-base rounded border border-gray-300 bg-white
                   focus:outline-hidden focus:ring-3 focus:ring-primary-200 focus:border-primary-300
               dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-400
                   file:border file:border-transparent file:rounded-l file:py-1.5 file:px-2 file:mr-3 file:text-base file:font-semibold file:text-white file:bg-slate-500 file:hover:bg-slate-600 dark:file:bg-slate-900 dark:file:hover:bg-slate-800">
        </div>

        <div class="text-right">
            {{ include('components/button.twig', {
                text: 'Import',
                icon: 'import',
                btn_green: true,
                submit: true,
            }) }}
        </div>
    </form>
{% endmacro %}

{{ include('components/modal.twig', {
    modal_id: 'importkeys',
    title: 'Import keys',
    content: _self.form(),
    open_btn: {
        text: 'Import',
        icon: 'import',
        btn_green: true,
        small: true,
    },
}) }}
